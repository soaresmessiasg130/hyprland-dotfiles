{
  "layer": "top",
  "position": "top",
  "spacing": 4,
  "reload_style_on_change": true,
  "modules-left": [
    "custom/launcher",
    "group/images",
    "hyprland/workspaces",
    "hyprland/window"
  ],
  "modules-center": [
    "user",
    "clock"
  ],
  "modules-right": [
    "group/tray",
    "group/audio",
    "group/hardware"
  ],
  "custom/launcher": {
    "format": "â˜°",
    "on-click": "rofi -show drun -theme $HOME/.config/rofi/launchers/type-7/style-4.rasi"
  },
  "group/tray": {
    "orientation": "horizontal",
    "modules": [
      "privacy",
      "tray"
    ]
  },
  "group/images": {
    "orientation": "horizontal",
    "modules": [
      "image#archlinux",
      "image#hyprland"
    ]
  },
  "image#archlinux": {
    "path": "/home/msz/hyprland-dotfiles/assets/archlinux-logo.png",
    "size": 18
  },
  "image#hyprland": {
    "path": "/home/msz/hyprland-dotfiles/assets/hyprland-logo.png",
    "size": 18
  },
  "user": {
    "format": "  {user}",
    "avatar": "/home/msz/hyprland-dotfiles/assets/user.png",
    "width": 18,
    "height": 18,
    "icon": true
  },
  "hyprland/window": {
    "format": "{title}",
    "maxLength": 30,
    "separate-outputs": true,
    "icon": true,
    "icon-size": 18,
    "rewrite": {
      "(.*) - Vivaldi": "$1"
    }
  },
  "group/audio": {
    "orientation": "horizontal",
    "modules": [
      "cava",
      "pulseaudio"
    ]
  },
  "group/hardware": {
    "orientation": "horizontal",
    "modules": [
      "cpu",
      "memory",
      "temperature"
    ]
  },
  "hyprland/workspaces": {
    "disable-scroll": true,
    "all-outputs": false,
    "warp-on-scroll": false,
    "format": "{name}",
